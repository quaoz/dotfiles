#!/usr/bin/env bash

mime=$(file -Lbs --mime-type "$1")
category=${mime%%/*}
kind=${mime##*/}
ext=${1##*.}

if [ "$kind" = zip ] && [ "$ext" = pth ]; then
	
	python <<EOF
import torch

data = torch.load("$1")
if isinstance(data, torch.Tensor):
    print(data.shape)
print(data)
EOF

elif [ "$kind" = json ]; then

	if [ "$ext" = ipynb ]; then
		jupyter nbconvert --to python --stdout "$1" | bat --color=always -plpython
	else
		jq -Cr . "$1"
	fi

elif [ "$kind" = vnd.sqlite3 ]; then

	yes .q | sqlite3 "$1" | bat --color=always -plsql

elif [ -d "$1" ]; then
	
	exa --git -hl --color=always --icons --sort=type "$1"

elif [ "$kind" = pdf ]; then
	
	pdftotext -q "$1" - | sed "s/\f/$(hr â”€)\n/g"

elif [ "$kind" = rfc822 ]; then
	
	bat --color=always -lEmail "$1"

elif [ "$category" = image ]; then

	chafa -f symbols "$1"
	exiftool "$1" | bat --color=always -plyaml

elif [ "$category" = text ]; then

	bat --color=always "$1"

else

	exit 1

fi

exit 0

